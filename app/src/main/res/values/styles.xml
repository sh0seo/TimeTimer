<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorNotification</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeActionBar" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorNotification</item>
        <item name="colorAccent">@color/red_timer</item>
    </style>

    <!-- minute text for watch -->
    <style name="minutes_watch">
        <item name="android:fontFamily">san-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/time_hour</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- minute text for watch -->
    <style name="minutes_watch_30">
        <item name="android:fontFamily">san-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/time_hour</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:rotation">-30</item>
    </style>

    <!-- minute text for watch -->
    <style name="minutes_watch_60">
        <item name="android:fontFamily">san-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/time_hour</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:rotation">-60</item>
    </style>

</resources>
